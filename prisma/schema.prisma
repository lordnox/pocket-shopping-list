// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// defines an item purchasable in a shop
model ShoppingItem {
  id        String            @id @default(cuid())
  userId    String
  createdAt DateTime          @default(now())
  name      String            @unique()
  type      ItemType          @default(kilogram)
  prices    ItemPrice[]
  createdBy User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags      ShoppingItemTag[]
}

// contains the price of a shopping item
model ItemPrice {
  id              String       @id @default(cuid())
  userId          String
  itemId          String
  createdAt       DateTime     @default(now())
  price           Int
  normalizedPrice Int
  amount          Int          @default(1000)
  locationId      String?
  location        GeoLocation? @relation(fields: [locationId], references: [id])
  item            ShoppingItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  createdBy       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ShoppingItemTag {
  id    String         @id @default(cuid())
  name  String         @unique
  items ShoppingItem[]

  @@map("Tag")
}

// Necessary for Next auth
model Account {
  id                String       @id @default(cuid())
  userId            String
  type              ProviderType
  provider          String
  providerAccountId String
  refresh_token     String?      @db.Text
  access_token      String?      @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?      @db.Text
  session_state     String?
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  items         ShoppingItem[]
  ItemPrice     ItemPrice[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model GeoLocation {
  id        String      @id @default(cuid())
  lat       Int
  long      Int
  ItemPrice ItemPrice[]
}

enum ProviderType {
  oidc
  oauth
  email
  credentials
}

enum ItemType {
  kilogram
  liter
}
